{% extends '::base.html.twig' %}

{% block body -%}
    <section class="posts col-md-9">
        <h1>cliente list</h1>

<div class="table-responsive">
    <table class="table table-bordered records_list">
        <thead>
            <tr class="active">
                <th>Id</th>
                <th>Nombre Completo</th>
                <th>Calle</th>
                <th>Noext</th>
                <th>Noint</th>
                <th>Colonia</th>
                <th>Delegacion</th>
                <th>Telefono</th>
                <th>Correo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('cliente_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombreCL~' '~entity.appatCL~' '~entity.apmatCL}}</td>
                <td>{{ entity.calle }}</td>
                <td>{{ entity.noExt }}</td>
                <td>{{ entity.noInt }}</td>
                <td>{{ entity.colonia }}</td>
                <td>{{ entity.delegacion }}</td>
                <td>{{ entity.telefono }}</td>
                <td>{{ entity.correo }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('cliente_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('cliente_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

        <ul>
        <li>
            <a href="{{ path('cliente_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    </section>
    {% endblock %}
