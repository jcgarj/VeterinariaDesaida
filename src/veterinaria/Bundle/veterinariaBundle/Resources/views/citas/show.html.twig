{% extends '::base.html.twig' %}

{% block body -%}
    <section class="posts col-md-9">
        <h1>citas</h1>

<div class="table-responsive"> 
    <table class="table table-bordered record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ entity.fecha|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Motivo</th>
                <td>{{ entity.motivo }}</td>
            </tr>
            <tr>
                <th>Costo</th>
                <td>{{ entity.costo }}</td>
            </tr>
        </tbody>
    </table>
</div>

        <ul class="record_actions">
    <li>
        <a href="{{ path('citas') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('citas_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
    </section>
{% endblock %}
