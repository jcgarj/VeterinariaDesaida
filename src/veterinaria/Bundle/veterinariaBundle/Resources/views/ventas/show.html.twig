{% extends '::base.html.twig' %}

{% block body -%}
    <section class="posts col-md-9">
        <h1>ventas</h1>

<div class="table-responsive">
    <table class="table table-bordered records_list">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Fechasalida</th>
                <td>{{ entity.fechaSalida|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Cantidad</th>
                <td>{{ entity.cantidad }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ entity.total }}</td>
            </tr>
        </tbody>
    </table>
</div>

        <ul class="record_actions">
    <li>
        <a href="{{ path('ventas') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('ventas_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
    </section>
{% endblock %}
