{% extends '::base.html.twig' %}

{% block body -%}
    <section class="posts col-md-9">
        <h1>mascota list</h1>

<div class="table-responsive">
    <table class="table table-bordered records_list">

        <thead>
            <tr>
                <th>Id</th>
                <th>Nombrem</th>
                <th>Peso</th>
                <th>Edad</th>
                <th>Color</th>
                <th>Especie</th>
                <th>Raza</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('mascota_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombreM }}</td>
                <td>{{ entity.peso }}</td>
                <td>{{ entity.edad }}</td>
                <td>{{ entity.color }}</td>
                <td>{{ entity.especie }}</td>
                <td>{{ entity.raza }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('mascota_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('mascota_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
        <ul>
        <li>
            <a href="{{ path('mascota_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    </section>
    {% endblock %}
