{% extends '::base.html.twig' %}

{% block body -%}
    <section class="posts col-md-9">
        <h1>medicamentos list</h1>

<div class="table-responsive">
    <table class="table table-bordered records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombremed</th>
                <th>Fechacad</th>
                <th>Tipomed</th>
                <th>Costo</th>
                <th>Precio</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('medicamentos_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombreMed }}</td>
                <td>{% if entity.fechaCad %}{{ entity.fechaCad|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.tipoMed }}</td>
                <td>{{ entity.costo }}</td>
                <td>{{ entity.precio }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('medicamentos_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('medicamentos_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

        <ul>
        <li>
            <a href="{{ path('medicamentos_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    </section>
    {% endblock %}
