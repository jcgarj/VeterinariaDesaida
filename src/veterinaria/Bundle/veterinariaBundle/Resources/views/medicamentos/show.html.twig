{% extends '::base.html.twig' %}

{% block body -%}
    <h1>medicamentos</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombremed</th>
                <td>{{ entity.nombreMed }}</td>
            </tr>
            <tr>
                <th>Fechacad</th>
                <td>{{ entity.fechaCad|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Tipomed</th>
                <td>{{ entity.tipoMed }}</td>
            </tr>
            <tr>
                <th>Costo</th>
                <td>{{ entity.costo }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ entity.precio }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('medicamentos') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('medicamentos_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
