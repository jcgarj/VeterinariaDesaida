{% extends '::base.html.twig' %}

{% block body -%}
    <section class="posts col-md-9">
        <h1>productos</h1>

<div class="table-responsive">
    <table class="table table-bordered records_list">       
         <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombreprod</th>
                <td>{{ entity.nombreProd }}</td>
            </tr>
            <tr>
                <th>Costo</th>
                <td>{{ entity.costo }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ entity.precio }}</td>
            </tr>
            <tr>
                <th>Fechaentrega</th>
                <td>{{ entity.fechaEntrega|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>
</div>
        <ul class="record_actions">
    <li>
        <a href="{{ path('productos') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('productos_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
    </section>
{% endblock %}
